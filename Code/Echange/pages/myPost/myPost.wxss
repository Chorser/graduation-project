/*悬浮按钮*/
.addBtn {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  display: block;
  padding: 0;
  background-size: cover;
  right: 30rpx;
  bottom: 40rpx;
  border-radius: 50%;
  z-index: 999; 
}

.list-title-content {
  padding: 16rpx 0rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  z-index: 99;
  left: 60rpx;
  top: 80rpx;
}

.list-title-content text {
  font-size: 48rpx;
  line-height: 48rpx;
  color: #fff;
}

.list-title-line {
  width: 95px;
  padding: 16rpx 0rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  border-bottom: 1px solid #fff;
  z-index: 2;
  left: 64rpx;
  top: 140rpx;
}

.list-title-brief {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  z-index: 2;
  left: 60rpx;
  top: 180rpx;
}

.list-title-brief text {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #fff;
}


image.cover {
  width: 100%;
  height: 250rpx;
  filter: blur(1px);
  border-radius: 10px;
}

.notice {
  margin: 0;
  padding: 15px;
}

.notice .title {
  font-size: 40rpx;
}
.notice .content {
  font-size: 28rpx;
  color: gray;
}
.notice .time {
  font-size: 24rpx;
  color: #C0C0C0;
  text-align: right;
}

.notice .soldout {
  position: absolute;
  top: 24rpx;
  right: 220rpx;
  width: 180rpx;
  height: 150rpx;
}
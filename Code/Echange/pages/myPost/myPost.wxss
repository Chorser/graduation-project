/*悬浮按钮*/
.addBtn {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  display: block;
  padding: 0;
  background-size: cover;
  right: 30rpx;
  bottom: 40rpx;
  border-radius: 50%;
  z-index: 999; 
}

.notice {
  margin: 0;
  padding: 15px;
}

.notice .title {
  font-size: 40rpx;
}
.notice .content {
  font-size: 28rpx;
  color: gray;
}
.notice .time {
  font-size: 24rpx;
  color: #C0C0C0;
  text-align: right;
}
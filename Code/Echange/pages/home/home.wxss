}

.notice_block {
  margin: 0;
  padding: 30rpx 30rpx 0 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0px 3px 5px #acacac;
}
.notice_block .soldout {
  position: absolute;
  top: 50rpx;
  right: 50rpx;
  width: 230rpx;
  height: 200rpx;
}
.notice_block .avatar {
  width: 100rpx;
  height: 100rpx;
  float: left;
  border-radius: 50%;
  border-color: grey
}
.notice_block .block1 {
  width: 150px;
  height: 60px;
  margin-left: 60px;
}
.notice_block .pName {
  display: inline-block;
  font-size: 32rpx;
  padding-top: 5px;
}
.notice_block .time {
  font-size: 28rpx;
  color: #c0c0c0;
  padding-bottom: 10px;
}
.notice_block .title {
  font-size: 32rpx;
  padding: 10px 15px;
  display: inline-block;
}
.price {
  font-size: 32rpx;
  color:red;
  float: right;
  padding-top: 10px;
}

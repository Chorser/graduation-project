/* pages/home/home.wxss */

.header {
  display: flex;
  align-items: center;
  margin: 20rpx;
}

.map {
  width: 75rpx;
  height: 75rpx;
}

.search-row {
  display: flex;
  flex: 1;
  align-items: center;
  border: 1rpx solid #ddd;
  height: 60rpx;
  color: #9b9b9b;
}

.search {
  flex: 1;
  font-size: 30rpx;
}
.search-icon {
  width: 50rpx;
  height: 50rpx;
}

.rollImg {
  display: block;
  max-height: 110%;
  margin: 0 auto;
}

.notice_block {
  margin: 0;
  padding: 15px;
}
.notice_block .avatar {
  width: 60px;
  height: 60px;
  float: left;
  border-radius: 50%;
  border-color: grey
}
.notice_block .block1 {
  width: 150px;
  height: 60px;
  margin-left: 70px;
}
.notice_block .pName {
  display: inline-block;
  font-size: 40rpx;
  padding-top: 5px;
}
.notice_block .time {
  font-size: 35rpx;
  color: #c0c0c0;
  padding-bottom: 10px;
}
.notice_block .title {
  font-size: 40rpx;
  padding: 10px 15px;
  display: inline-block;
}
.price {
  font-size: 40rpx;
  color:red;
  float: right;
  padding-top: 10px;
}

.map {
  width: 75rpx;
  height: 75rpx;
}

.address_Name {
  font-size: 26rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.search-row {
  display: flex;
  flex: 1;
  height: 75rpx;
  align-items: center;
  border: 1rpx solid #ddd;
  border-radius: 15rpx;
  background-color: white;
}

.search-input {
  flex: 1;
  font-size: 3e0rpx;
  height: 80rpx;
  padding: 0 10px;
}

.search-icon {
  width: 45rpx;
  height: 45rpx;
  padding-right: 10rpx;
}

.rollImg {
  /* display: block;
  max-height: 110%;
  margin: 0 auto; *//*3D轮播效果*/
  position: absolute;
  width: 100%;
  height: 380rpx;
  border-radius: 15rpx;
  z-index: 5;
  opacity: 0.7;
  top: 6%;
}

.active {
  opacity: 1;
  z-index: 10;
  height: 430rpx;
  top: 0%;
  transition: all 0.2s ease-in 0s;
}

.notice_block {
  margin: 0;
  padding: 30rpx 30rpx 0 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0px 3px 5px #acacac;
}

.notice_block .soldout {
  position: absolute;
  top: 50rpx;
  right: 50rpx;
  width: 230rpx;
  height: 200rpx;
}

.notice_block .avatar {
  width: 100rpx;
  height: 100rpx;
  float: left;
  border-radius: 50%;
  border-color: grey;
}

.notice_block .block1 {
  width: 150px;
  height: 60px;
  margin-left: 60px;
}

.notice_block .pName {
  display: inline-block;
  font-size: 32rpx;
  padding-top: 5px;
}

.notice_block .time {
  font-size: 28rpx;
  color: #c0c0c0;
  padding-bottom: 10px;
}

.notice_block .title {
  font-size: 32rpx;
  padding: 10px 15px;
  padding-left: 0;
  display: inline-block;
}

.price {
  font-size: 32rpx;
  color: red;
  float: right;
  padding-top: 10px;
}


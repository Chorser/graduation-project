.no-more {
  text-align: center;
  color: #3a3939;
  padding: 5px 0;
}


.tool {
  height: 64rpx;
  text-align: right;
  line-height: 64rpx;
  border-top: 1rpx solid #DDD;
  font-size: 24rpx;
  padding-bottom: 10rpx;
}
.tool-item {
  display: inline-block;
  vertical-align: middle;
  margin-right: 25rpx;
}
.tool-item image {
  height: 40rpx;
  width: 40rpx;
  vertical-align: middle;
  margin-right: 10rpx;
  padding-left: 0;
}

.location {
  float: left; 
  max-width: 67%; 
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
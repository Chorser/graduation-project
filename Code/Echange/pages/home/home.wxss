.header {
  display: flex;
  align-items: center;
  margin: 20rpx;
}

.map {
  width: 75rpx;
  height: 75rpx;
}

.search-row {
  display: flex;
  flex: 1;
  height: 60rpx;
  align-items: center;
  border: 1rpx solid #ddd;
  border-radius: 15rpx;
  background-color: white;
}

.search {
  flex: 1;
  font-size: 30rpx;
  padding: 0 10px;
}
.search-icon {
  width: 50rpx;
  height: 50rpx;
}


/* pages/home/home.wxss */
.header {
  display: flex;
  align-items: center;
  margin: 20rpx;
}

.map {
  width: 75rpx;
  height: 75rpx;
}

.search-row {
  display: flex;
  flex: 1;
  align-items: center;
  border: 1rpx solid #DDD;
  height: 60rpx;
  color: #9B9B9B;
}

.search {
  flex: 1;
  font-size: 30rpx;
}
.search-icon {
  width: 50rpx;
  height: 50rpx;
}
.rollImg {
  display: flex
}

.notice {
  margin: 0;
  padding: 15px;
}

.notice .title {
  font-size: 40rpx;
}
.notice .content {
  font-size: 28rpx;
  color: gray;
}
.notice .time {
  font-size: 24rpx;
  color: #C0C0C0;
  text-align: right;
}
.active {
  opacity: 1;
  z-index: 10;
  height: 430rpx;
  top: 0%;
  transition: all .2s ease-in 0s;
}

.notice_block {
  margin: 0;
  padding: 15px;
  z-index: 200rpx;
  margin-bottom: 10rpx
}
.notice_block .avatar {
  width: 60px;
  height: 60px;
  float: left;
  border-radius: 50%;
  border-color: grey
}
.notice_block .block1 {
  width: 150px;
  height: 60px;
  margin-left: 70px;
}
.notice_block .pName {
  display: inline-block;
  font-size: 40rpx;
  padding-top: 5px;
}
.notice_block .time {
  font-size: 35rpx;
  color: #c0c0c0;
  padding-bottom: 10px;
}
.notice_block .title {
  font-size: 40rpx;
  padding: 10px 15px;
  display: inline-block;
}
.price {
  font-size: 40rpx;
  color:red;
  float: right;
  padding-top: 10px;
}

/*悬浮按钮*/
.searchBtn {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  display: block;
  padding: 0;
  background-size: cover;
  background-color: #1296db;
  right: 30rpx;
  bottom: 40rpx;
  border-radius: 50%;
  z-index: 999; 
}
.icon-search {
  width: 40rpx;
  height: 40rpx;
  padding: 30rpx;
}

.header {
  display: flex;
  align-items: center;
  margin: 20rpx;
}

.map {
  width: 75rpx;
  height: 75rpx;
}

.address_Name {
  font-size: 26rpx; 
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis; 
}

.search-row {
  display: flex;
  flex: 1;
  height: 75rpx;
  align-items: center;
  border: 1rpx solid #ddd;
  border-radius: 15rpx;
  background-color: white;
}
.search-input {
  flex: 1;
  font-size: 3e0rpx;
  height: 80rpx;
  padding: 0 10px;
}
.search-icon {
  width: 45rpx;
  height: 45rpx;
  padding-right: 10rpx;
}


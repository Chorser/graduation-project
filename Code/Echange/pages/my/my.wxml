<view class="page">
  <view class='page__hd i-header'>
    <view class="avatar">
      <image src="{{ avatar }}" />
    </view>
    <view class="name">{{nickName}}</view>
  </view>
  
  <view class="item" data-target="user" bindtap="navTo">
    <image src='/images/user.png'></image>
    <text>个人信息</text>
    <image src='/images/right.png'> </image>
  </view>

  <view class="item" data-target="myPost" bindtap="navTo">
    <image src='/images/publish.png'></image>
    <text>我的发布</text>
    <image src='/images/right.png'> </image>
  </view>
  <view class="item" data-target="like" bindtap="navTo">
    <image src='/images/tool/like1.png'></image>
    <text>我的收藏</text>
    <image src='/images/right.png'> </image>
  </view>

  <!-- <view class="item" data-target="share" bindtap="navTo">
    <image src='/images/share.png'></image>
    <text>分享给朋友</text>
    <image src='/images/right.png'> </image>
  </view> -->

  <view class="item" data-target="feedback" bindtap="navTo">
    <image src='/images/server.png'></image>
    <text>意见反馈</text>
    <image src='/images/right.png'> </image>
  </view>

</view>
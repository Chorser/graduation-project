/* pages/me/me.wxss */
.avatar {
  display: flex;
  justify-content:center;
  margin-top: 60rpx;
}

.avatar image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
}

.name {
  text-align: center;
  color: #000;
  font-size: 40rpx;
  font-weight: bold;
  margin: 10rpx 0 60rpx;
}

.item {
  display: flex;
  color: #9B9B9B;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #DDD;
  font-size: 36rpx;
}

.item text:nth-child(2) {
  flex: 1;
}

.item image{
  width: 50rpx;
  height: 50rpx;
  margin: 0 30rpx;
}
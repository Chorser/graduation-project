image.cover {
  width: 100%;
  height: 250rpx;
  filter: blur(1px);
  border-radius: 10px;
}

.list-title-content {
  padding: 16rpx 0rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  z-index: 2;
  left: 60rpx;
  top: 80rpx;
}

.list-title-content text {
  font-size: 48rpx;
  line-height: 48rpx;
  color: #fff;
}

.list-title-line {
  width: 75px;
  padding: 16rpx 0rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  border-bottom: 1px solid #fff;
  z-index: 2;
  left: 64rpx;
  top: 140rpx;
}

.list-title-brief {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  z-index: 2;
  left: 60rpx;
  top: 180rpx;
}

.list-title-brief text {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #fff;
}

/* 列表样式 */
.like {
  margin: 0;
  padding: 15px;
  height: 140rpx;
}

.like image {
  width: 22%;
  height: 130rpx;
  float: left;
}
.like .title {
  font-size: 32rpx;
  padding: 10rpx;
  padding-left: 25%;
}

image.cover {
  width: 100%;
  height: 250rpx;
  filter: blur(1px);
  border-radius: 10px;
}

.list-title-content {
  padding: 16rpx 0rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  left: 60rpx;
  top: 80rpx;
}

.list-title-content text {
  font-size: 48rpx;
  line-height: 48rpx;
  color: #fff;
}

.list-title-line {
  width: 95px;
  padding: 16rpx 0rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  border-bottom: 1px solid #fff;
  /* z-index: 2; */
  left: 64rpx;
  top: 140rpx;
}

.list-title-brief {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  z-index: 2;
  left: 60rpx;
  top: 180rpx;
}

.list-title-brief text {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #fff;
}



/* nav切换栏 */
.nav {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}

.default {
  line-height: 100rpx;
  text-align: center;
  flex: 1;
  border-right: 1px solid gainsboro;
  color: #000;
  font-weight: bold;
  font-size: 28rpx;
}

.red {
  line-height: 100rpx;
  text-align: center;
  color: #fc5558;
  flex: 1;
  border-right: 1px solid gainsboro;
  font-weight: bold;
  font-size: 28rpx;
}

.show {
  display: block;
  text-align: center;
  line-height: 200rpx;
}

.hidden {
  display: none;
  text-align: center;
  line-height: 200px;
}

.order {
  margin: 0;
  padding: 15px;
  height: 100rpx;
}

.order .pic {
  width: 80rpx;
  height: 80rpx;
  display: inline-block;
}
.order .title {
  font-size: 32rpx;
  padding: 15rpx;
  display: inline-block;
}

/* pages/message/message.wxss */
.list-title-content {
  padding: 16rpx 0rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  z-index: 99;
  left: 60rpx;
  top: 80rpx;
}

.list-title-content text {
  font-size: 48rpx;
  line-height: 48rpx;
  color: #fff;
}

.list-title-line {
  width: 95px;
  padding: 16rpx 0rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  border-bottom: 1px solid #fff;
  z-index: 2;
  left: 64rpx;
  top: 140rpx;
}

.list-title-brief {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  z-index: 2;
  left: 60rpx;
  top: 180rpx;
}

.list-title-brief text {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #fff;
}


image.cover {
  width: 100%;
  height: 250rpx;
  filter: blur(1px);
  border-radius: 10px;
}

.message {
  margin: 0;
  padding: 15px;
}
.message .un-read {
  width: 30rpx;
  height: 30rpx;
}
.message .msg {
  /* flex: 8; */
}
.message .time {
  /* flex: 2; */
  font-size: 28rpx;
  color: #C0C0C0;
  text-align: right;
}
.avatar {
  width: 150rpx;
  height: 150rpx;
  margin-left: 15rpx;
  border-radius: 50%;
  border-color: grey
}
image .pic {
  width: 200rpx;
  height: 200rpx;
  float: right;
}

/* item删除btn */
.remove{  
  width: 160rpx;  
  height: 100%;  
  background-color: red; 
  color: white; 
  position: absolute;  
  top: 0;  
  right: -160rpx;  
  display: flex;  
  justify-content: center;  
  align-items: center;  
}  